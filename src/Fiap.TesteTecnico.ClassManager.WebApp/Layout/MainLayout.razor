@inherits LayoutComponentBase

<MudThemeProvider IsDarkMode="true"/>
<MudDialogProvider 
    DisableBackdropClick="true"    
/>
<MudSnackbarProvider />

    <MudLayout>
    <MudDrawer Open Elevation="5" Variant="@DrawerVariant.Persistent" Color="Color.Dark">
        <MudDrawerHeader>
            <MudText Typo="Typo.subtitle2" Color="Color.Secondary">CLASS MANAGER</MudText>
        </MudDrawerHeader>
        <MudNavMenu Color="Color.Secondary">
            <MudNavLink Href="/" Match="NavLinkMatch.All" Icon="@Icons.Material.Filled.Checklist" IconColor="Color.Inherit">Turmas e alunos</MudNavLink>
            <MudNavLink Href="/alunos" Icon="@Icons.Material.Filled.Groups" IconColor="Color.Inherit">Alunos</MudNavLink>
            <MudNavLink Href="/turmas" Icon="@Icons.Material.Filled.School" IconColor="Color.Inherit">Turmas</MudNavLink>
        </MudNavMenu>
    </MudDrawer>
    <MudMainContent>
        <MudContainer>
            @Body
        </MudContainer>
    </MudMainContent>
</MudLayout>